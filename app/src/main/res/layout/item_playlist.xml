<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="3dp"
    android:paddingStart="5dp"
    android:paddingEnd="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/play_list_cover"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="3dp"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <TextView
        android:includeFontPadding="false"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/play_list_cover"
        android:layout_marginTop="7dp"
        android:id="@+id/play_list_name"
        android:textColor="#303131"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/play_list_cover"
        tools:text="我喜欢的音乐"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:includeFontPadding="false"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@id/play_list_cover"
        android:id="@+id/track_count"
        android:textColor="#b3b5b6"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/play_list_cover"
        tools:text="119首"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginEnd="16dp"
        android:id="@+id/play_list_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/list_icn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/music_item_space" />

</android.support.constraint.ConstraintLayout>